<% @tweets.each do |a| %>
    <%= a.message %>
    <%= link_to '削除', tweet_path(a), data: {"turbo-method": :delete} %><br>
<% end %>

<hr>

<%= form_for @tweet, url: {action: :create} do |f| %>
    <%= f.label :message, 'message' %>
    <%= f.text_field :message %><br>
    <%= f.submit 'ツイート' %>
<% end %>